/* pages/main_music/main_music.wxss */
page{
  --search-padding:10px 0;
  --search-baclground-color:#fff;
  box-sizing: border-box;
  padding: 0 25rpx;
}
.banner{
  border-radius: 12rpx;
  overflow: hidden;
}
.banner .item .image{
  width: 100%;
}

.play-bar{
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding: 0 8px;
  box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1);
  background: #fafafa;
}
.play-bar-left, .play-bar-right {
  display: flex;
  align-items: center;
}
.play-bar-album{
  position: relative;
  top: -8px;
  margin: 0 20rpx 0 10rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
}

.play-bar-songName{
  font-size: 30rpx;
}
.play-bar-songerName{
  margin-left: 10rpx;
  font-size: 25rpx;
  color: #999;
}

.play-bar .play-pause{
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}

.play-bar .music-list{
  width: 70rpx;
  height: 70rpx;
  margin-right: 10rpx;
}

@keyframes rotateAnim {
  0% {
    transform: rotate(0);
  }

  100% {
    transform: rotate(360deg);
  }
}

.album-anim {
  animation: rotateAnim 10s linear infinite;
}
