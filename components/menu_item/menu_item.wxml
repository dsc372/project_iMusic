<!--components/song_menu_item/song_menu_item.wxml-->
<wxs src="../../utils/format.wxs" module="format"></wxs>
<view class="menu-item" bindtap="onMenuItemTap">
  <view class="top">
    <image class="image" src="{{itemData.coverImgUrl}}" mode="widthFix"></image>
    <view class="count">{{format.formatCount(itemData.playCount)}}</view>
  </view>
  <view class="bottom">
  {{itemData.name}}
  </view>
</view>