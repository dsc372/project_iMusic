/* pages/detail_search/detail_search.wxss */
.header{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.search{
  width: 85%;
}
.searchAction{
  margin-right: 20rpx;
  color: #999;
}

.hot-container{
  margin: 0 30rpx;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
}
.hot-list{
  display: flex;
  flex-wrap: wrap;
}
.order{
  margin: 0 15rpx;
}
.active{
  font-weight: 700;
}
.hot-list-item{
  display: flex;
  align-items: center;
  width: 50%;
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.icon{
  margin-left:20rpx ;
  max-width: 50rpx;
  max-height: 50rpx;
}

.search-answer-list{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.search-answer-list-item{
  display: flex;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}
.search-answer-value{
  width: 680rpx;
  border-bottom: 1rpx solid #eee;
}

.history{
  padding: 0 30rpx;
}
.history-header{
  display: flex;
  justify-content: space-between;
}
.history-title{
  margin: 0 30 0 0rpx;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.history-list{
  display: flex;
  flex-wrap: wrap;
}
.history-item{
  margin: 20rpx 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #eee;
  border-radius:15rpx;
}


